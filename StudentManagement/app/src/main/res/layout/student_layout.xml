<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/student" />

    <Button
        android:id="@+id/student_activity_selectInfo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:text="@string/student_activity_selectInfo" />

    <Button
        android:id="@+id/student_activity_changePassword"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_activity_selectInfo"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="@string/student_activity_changePassword" />

</RelativeLayout>